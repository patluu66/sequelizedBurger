<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="./images/1.png" alt="Burger" />
			<h1>Sequelize Burger!</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
				{{#each burger}}
				  	{{#unless this.devoured}}
					  	<div class="col-xs-9 text-center">
					  		<pre>{{this.id}}. {{this.burger_name}}</pre>
						</div>
						<div class="col-xs-3 text-center">
							<form method="POST" action="/burger/update?_method=PUT" class="button-size">
								<input input type="hidden" type="text" name="burger_id" value={{this.id}}>	
								<input class="custInput" input type="text" name="customer" placeholder="Customer?"><br>
								<button type="submit" class="btn btn-default">Devour it!</button>
							</form>
						</div>
					{{/unless}}
				{{/each}}
			</div>	
		</div>
		<div class="col-xs-6 text-center" class="task">
			{{#each burger}}
			  	{{#if this.devoured}}
			  		{{#if this.Customer.customer}}
					  {{!-- A read-only input field cannot be modified (however, a user can tab to it, highlight it, and copy the text from it). --}}
			  			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}  (This burger was eaten by {{this.Customer.customer}}) " readonly>
			
			  		{{else}}
			  			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			  		{{/if}}
				{{/if}}
			 {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burger/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger and Click the "Submit" button.</p>
		</div>
	</div>
</div>